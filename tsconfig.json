{
  "compilerOptions": {
    "moduleResolution": "Node",
    "target": "es2015",
    "module":"es2015",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "strict": true,
    "sourceMap": false,
    // "declaration": true,
    // "declarationDir": "types",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "src",
    "paths": {
      "@component/*": ["src/*"]
    }
  },
  "include": [
      "src", "types"
  ]
}
